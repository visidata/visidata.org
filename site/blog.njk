---
layout: default
meta_title: Blog
meta_description: VisiData Blog
body_class: blog
title: Blog
pagination:
    data: collections.blog
    size: 10
    reverse: false
    alias: posts
---
<main id="main" class="main inner flex flex-1 flex-col py-10 focus:outline-none" tabindex="-1">
    <section id="container" class="column centre flex-1" aria-label="Blogs">
        <h1 class="page-title text-3xl md:text-5xl text-center max-w-6xl mx-auto font-black">{{ title }}
        </h1>
        <p class="text-center mb-10"><a href="/feed.xml">RSS Feed</a></p>
        <div class="posts">
            {%- for post in posts -%}
            <article class=" overflow-hidden">
                <div class="py-2">
                    <h2 class="text-2xl">
                        <a class="inline-block no-underline border-b-2" href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>
                    <div class="text-sm md:flex">
                        <time datetime="{{ post.date | dateDisplay }}">
                            {{ post.date | dateDisplay }}
                        </time>
                    </div>
                </div>
            </article>
            {%- endfor -%}
        </div>
        <nav aria-labelledby="my-pagination">
            <div class="grid grid-cols-1 md:grid-cols-2 w-full mt-8 mb-20">
                {% if pagination.href.previous %}
                <div class="place-self-start">
                    <a class="block mb-5 md:mb-0 border-brand-primary" href="{{ pagination.href.previous }}">← Previous</a>
                </div>
                {% else %}
                <div></div>
                {% endif %}
                {% if pagination.href.next %}
                <div class="place-self-end">
                    <a class="block text-right border-brand-primary" href="{{ pagination.href.next }}">Next →</a>
                </div>
                {% endif %}
            </div>
        </nav>
    </section>
</main>