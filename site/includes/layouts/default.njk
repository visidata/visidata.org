<!doctype html>
<html lang="en" class="min-h-full antialiased">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if meta_title %}{{ meta_title }}{% elif title %}{{ title }}{% elif eleventyNavigation.key %}{{ eleventyNavigation.key }} | Docs{% endif %} | {{ site.name }}</title>
    <meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}{{ excerpt }}{% endif %}">
    <meta name="robots" content="index,follow" />
    {# include CSS #}
    <link rel="stylesheet" type="text/css" href="/css/style.css?={% version %}">
    <link rel="stylesheet" type="text/css" href="/css/inconsolata.css?={% version %}">
    <link rel="stylesheet" type="text/css" href="/css/asciinema-player.css?={% version %}">
    {# include scripts #}
    <script data-goatcounter="https://visidata.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    {# include social meta tags #}
    {% include "components/social-meta.njk" %}
    {# include static assets e.g. favicon, fonts etc #}
    <link rel="icon" type="image/png" href="{{ site.images.favicon }}">
    {# canonical #}
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <link rel="alternate" type="application/rss+xml" title="VisiData Blog Feed" href="{{ site.url }}/feed.xml">
    <link rel="alternate" type="application/rss+xml" title="VisiData Releases Feed" href="{{ site.url }}/releases.xml">
</head>

<body {% if body_class %} id="{{ body_class }}" {% endif %} class="text-gray-800 dark:bg-gray-900 dark:text-gray-100">
    <a class="sr-only" href="#main">Skip to content</a>
    <div id="wrapper" class="flex flex-col relative min-h-screen">
        {# include header #}
        {% include "components/header.njk" %}
        {# include content #}
        {{ content | safe }}
        {# include footer #}
        {% include "components/footer.njk" %}
    </div>
    <script src="https://unpkg.com/medium-zoom@1"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            mediumZoom('.post img');
        });
    </script>
</body>

</html>
